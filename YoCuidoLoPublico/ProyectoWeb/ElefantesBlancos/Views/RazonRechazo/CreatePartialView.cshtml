@model ElefantesBlancosDatos.Models.stra_razones_rechazo
@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true) 

    <fieldset>
        <legend>stra_razones_rechazo</legend>
        <div id="agregar_parametro">
            <h2>
                <img src="../images/estilos_eb/icono_nuevo_parametro.png" width="80" height="80" /></h2>
            <h2>&nbsp;</h2>
            <h2>Nuevo Parámetro </h2>
          <p>*Digite a continuación el nuevo parámetro</p>
            <hr />
            <table width="100%" border="0" cellpadding="0" cellspacing="15">
                <tr>
                    <td>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.razon, new { @class = "campo_texto",  @maxlength = "100" })
                            @Html.ValidationMessageFor(model => model.razon)
                        </div>
                    </td>
                </tr>
            </table>
            <td align="center" valign="middle">&nbsp;</td>
            <p>
                <input type="submit" value="Crear" id="btnCreate"  />
            </p>
        </div>
        <p>&nbsp;</p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
