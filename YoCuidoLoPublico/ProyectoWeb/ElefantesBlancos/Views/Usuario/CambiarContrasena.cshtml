@model ElefantesBlancosDatos.Models.stra_usuarios

@{
    ViewBag.Title = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="body_admin">
    <div class="contenido_body_admin">
        <div class="contenedor_general">
            <div class="contenedor1">
                <div class="titulo_contenedor">Cambiar Contraseña</div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="contenido">
                        <fieldset>
                            <legend>CambiarContrasena Form</legend>
                            <div class="editor-field" hidden="hidden">
                                @Html.EditorFor(model => model.id_stra_usuario, new { @class = "campo_texto" })
                                @Html.ValidationMessageFor(model => model.id_stra_usuario)
                            </div>
                            <ol>
                                <li>
                                    @Html.LabelFor(m => m.usuario)
                                    @Html.DisplayFor(m => m.usuario)
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.ViejaClave)
                                    @Html.PasswordFor(m => m.ViejaClave, new { @class = "campo_texto" })
                                    @Html.ValidationMessageFor(m => m.ViejaClave)
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.NuevaClave)
                                    @Html.PasswordFor(m => m.NuevaClave, new { @class = "campo_texto" })
                                    @Html.ValidationMessageFor(m => m.NuevaClave)
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.ConfirmarClave)
                                    @Html.PasswordFor(m => m.ConfirmarClave, new { @class = "campo_texto" })
                                    @Html.ValidationMessageFor(m => m.ConfirmarClave)
                                </li>
                            </ol>
                            <input  type="submit" value="Guardar" />
                        </fieldset>
                    </div>
                }
            </div>

        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}