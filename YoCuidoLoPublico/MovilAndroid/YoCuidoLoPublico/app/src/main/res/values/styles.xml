<resources>

    <!-- Application theme. -->
    <style name="Reportes" parent="android:Theme.Light.NoTitleBar"></style>
    
    <!-- Application theme. -->
    
    <style name="Button">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">28dip</item>
        <item name="android:minWidth">28dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <!-- Home Screen -->
    <style name="ButtonReport" parent="@style/Button">
        <item name="android:background">@drawable/fondos05</item>
    </style>
    
    <style name="ButtonFind" parent="@style/Button">
        <item name="android:background">@drawable/fondos06</item>
    </style>
    
    <style name="ButtonMyElephants" parent="@style/Button">
        <item name="android:background">@drawable/fondos07</item>
    </style>
    
    <!-- Mapa -->
	<style name="ButtonFindMe" parent="@style/Button">
        <item name="android:background">@drawable/icono04</item>
    </style>
    
	<style name="ButtonReportMap" parent="@style/Button">
        <item name="android:background">@drawable/icono05</item>
    </style>

	<style name="ButtonRed" parent="@style/Button">
        <item name="android:background">@drawable/btn_rojo</item>
    </style>

    <style name="ButtonReject" parent="@style/Button">
        <item name="android:background">@drawable/btn_rechazar</item>
    </style>
    
    <style name="ButtonAddPhoto" parent="@style/Button">
        <item name="android:background">@drawable/btn_agregar_foto</item>
    </style>
    
	<style name="MainBackground">
        <item name="android:background">@drawable/main_background</item>
    </style>
    
	<!-- Spinner -->
	<style name="Reportes.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
    </style>
    
	<style name="Reportes.Spinner.Item" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FF818181</item>
        <item name="android:textSize">@dimen/field_text_size</item>
    </style>
    
	<!-- EditText -->
	<style name="Reportes.EditText" parent="android:Widget.TextView">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceMediumInverse</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>
